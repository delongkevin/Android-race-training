<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".ui.HomeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_logo_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.04" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_logo_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.3" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_logo_top"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.01" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_logo_bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.07" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@mipmap/logo_t"

            app:layout_constraintBottom_toBottomOf="@id/guideline_logo_bottom"
            app:layout_constraintLeft_toLeftOf="@id/guideline_logo_left"
            app:layout_constraintRight_toRightOf="@id/guideline_logo_right"
            app:layout_constraintTop_toTopOf="@id/guideline_logo_top" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_careerDropDown_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".67" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_careerDropDown_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".93" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_careerDropDown_top"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.03" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_careerDropDown_bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.09" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@mipmap/logo_t"
            app:strokeColor="@color/colorPrimary"
            app:strokeWidth="0.3dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="@id/guideline_careerDropDown_bottom"
            app:layout_constraintLeft_toLeftOf="@id/guideline_careerDropDown_left"
            app:layout_constraintRight_toRightOf="@id/guideline_careerDropDown_right"
            app:layout_constraintTop_toTopOf="@id/guideline_careerDropDown_top">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                >
                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/spinnerCareer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@android:color/transparent"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/helvetica_ce_oblique"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textSize="14sp"
                    app:ms_arrow_tint="@color/colorPrimary"
                    app:ms_padding_bottom="7dp"
                    app:ms_padding_left="5dp"
                    app:ms_padding_right="0dp"
                    app:ms_popup_padding_top="0dp" />

            </LinearLayout>



        </com.google.android.material.card.MaterialCardView>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_careerMeter_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.3" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_careerMeter_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.7" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_careerMeter_top"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.09" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_careerMeter_bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.23" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/guideline_careerMeter_bottom"
            app:layout_constraintLeft_toLeftOf="@id/guideline_careerMeter_left"
            app:layout_constraintRight_toRightOf="@id/guideline_careerMeter_right"
            app:layout_constraintTop_toTopOf="@id/guideline_careerMeter_top">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/textViewDummyCareerMiles"
                android:src="@mipmap/green_meter" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textViewDummyCareerMiles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/white_opac_twenty"
                android:fontFamily="@font/djb_bold"
                android:gravity="center"
                android:maxLines="1"
                android:text="CAREER MILES"
                android:textColor="@color/lime_green"
                android:textSize="14sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textViewCareerMiles"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="35dp"
                android:layout_marginBottom="35dp"
                android:fontFamily="@font/djb_bold"
                android:gravity="center"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/lime_green"
                app:autoSizeMaxTextSize="50dp"
                app:autoSizeMinTextSize="14sp"
                app:autoSizeTextType="uniform" />

        </RelativeLayout>


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_monthMeter_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_monthMeter_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.36" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_monthMeter_top"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.24" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_monthMeter_bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.36" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/guideline_monthMeter_bottom"
            app:layout_constraintLeft_toLeftOf="@id/guideline_monthMeter_left"
            app:layout_constraintRight_toRightOf="@id/guideline_monthMeter_right"
            app:layout_constraintTop_toTopOf="@id/guideline_monthMeter_top">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/textViewDummyMonthMiles"
                android:src="@mipmap/orange_meter" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textViewDummyMonthMiles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/white_opac_twenty"
                android:fontFamily="@font/djb_bold"
                android:gravity="center"
                android:maxLines="1"
                android:text="MONTH MILES"
                android:textColor="@color/orange"
                android:textSize="14sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textViewMonthMiles"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="35dp"
                android:fontFamily="@font/djb_bold"
                android:gravity="center"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/orange"
                app:autoSizeMaxTextSize="55dp"
                app:autoSizeMinTextSize="20sp"
                app:autoSizeTextType="uniform" />

        </RelativeLayout>


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_weekMeter_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.37" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_weekMeter_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.63" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_weekMeter_top"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.24" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_weekMeter_bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.36" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/guideline_weekMeter_bottom"
            app:layout_constraintLeft_toLeftOf="@id/guideline_weekMeter_left"
            app:layout_constraintRight_toRightOf="@id/guideline_weekMeter_right"
            app:layout_constraintTop_toTopOf="@id/guideline_weekMeter_top">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/textViewDummyWeekMiles"
                android:src="@mipmap/yellow_meter" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textViewDummyWeekMiles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/white_opac_twenty"
                android:fontFamily="@font/djb_bold"
                android:gravity="center"
                android:maxLines="1"
                android:text="WEEK MILES"
                android:textColor="@color/leafy_green"
                android:textSize="14sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textViewWeekMiles"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="35dp"
                android:fontFamily="@font/djb_bold"
                android:gravity="center"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/leafy_green"
                app:autoSizeMaxTextSize="55dp"
                app:autoSizeMinTextSize="20sp"
                app:autoSizeTextType="uniform" />

        </RelativeLayout>


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_yearMeter_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.64" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_yearMeter_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_yearMeter_top"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.24" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_yearMeter_bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.36" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/guideline_yearMeter_bottom"
            app:layout_constraintLeft_toLeftOf="@id/guideline_yearMeter_left"
            app:layout_constraintRight_toRightOf="@id/guideline_yearMeter_right"
            app:layout_constraintTop_toTopOf="@id/guideline_yearMeter_top">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/textViewDummyYearMiles"
                android:src="@mipmap/orange_meter" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textViewDummyYearMiles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/white_opac_twenty"
                android:fontFamily="@font/djb_bold"
                android:gravity="center"
                android:maxLines="1"
                android:text="2020 MILES"
                android:textColor="@color/orange"
                android:textSize="14sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textViewYearMiles"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="35dp"
                android:fontFamily="@font/djb_bold"
                android:gravity="center"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/orange"
                app:autoSizeMaxTextSize="55dp"
                app:autoSizeMinTextSize="20sp"
                app:autoSizeTextType="uniform" />

        </RelativeLayout>


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_event_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.03" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_event_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.97" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_event_top"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.38" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_event_bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.55" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@id/guideline_event_bottom"
            app:layout_constraintLeft_toLeftOf="@id/guideline_event_left"
            app:layout_constraintRight_toRightOf="@id/guideline_event_right"
            app:layout_constraintTop_toTopOf="@id/guideline_event_top">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helvetica_ce_cond_bold"
                    android:text="Events"
                    android:textColor="@color/colorPrimary" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardViewNoEvent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="4"
                    android:visibility="invisible"
                    app:cardBackgroundColor="@color/white_opac_twenty"
                    app:cardCornerRadius="5dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/helvetica"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="No Upcoming Event"
                        android:textColor="@color/white" />

                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:id="@+id/layoutEvent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="invisible">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardViewEvent"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:layout_weight="4"
                        android:clickable="true"
                        app:cardBackgroundColor="@color/white_opac_twenty"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/textViewRaceName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/helvetica"
                                android:maxLines="1"
                                android:text="Palm Beach Road Run"
                                android:textColor="@color/white"
                                android:textSize="14sp"

                                />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/textViewRaceDescription"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:fontFamily="@font/helvetica"
                                android:maxLines="1"
                                android:text="23rd Avenue Half Marathon"
                                android:textColor="@color/white"
                                android:textSize="12sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/layoutRaceLocation"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">


                                    <ImageView
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:src="@drawable/loc" />

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/textViewRaceLocation"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/helvetica"
                                        android:maxLines="2"
                                        android:text="Miami Beach"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="12sp" />


                                </LinearLayout>

                                <ImageView
                                    android:layout_width="0.5dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:background="@color/colorPrimary"
                                    tools:ignore="Suspicious0dp" />

                                <LinearLayout
                                    android:id="@+id/layoutRaceDate"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">


                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/textViewRaceDate"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/helvetica"
                                        android:maxLines="1"
                                        android:gravity="right"
                                        android:text=""
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="12sp" />


                                </LinearLayout>


                            </LinearLayout>


                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:layout_weight="2"
                        app:cardBackgroundColor="@color/white_opac_twenty"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <LinearLayout
                                android:id="@+id/layoutDays"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/helvetica"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:text="Days : "
                                    android:textColor="@color/colorPrimary"

                                    />

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/textViewCountDownDays"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/helvetica"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:text="00"
                                    android:textColor="@color/white"
                                    android:textSize="16sp" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:orientation="horizontal">

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/helvetica"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:text="HH : MM : SS"
                                    android:textColor="@color/colorPrimary"

                                    />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/textViewCountDown"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/helvetica"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:text="23 : 05 : 02"
                                    android:textColor="@color/white"
                                    android:textSize="16sp" />


                            </LinearLayout>


                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>


                </LinearLayout>


            </RelativeLayout>


        </LinearLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_weather_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.03" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_weather_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.97" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_weather_top"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.55" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_weather_bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.75" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@id/guideline_weather_bottom"
            app:layout_constraintLeft_toLeftOf="@id/guideline_weather_left"
            app:layout_constraintRight_toRightOf="@id/guideline_weather_right"
            app:layout_constraintTop_toTopOf="@id/guideline_weather_top">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/area" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textViewCurrentLoc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/helvetica"
                        android:text="Miami"
                        android:textColor="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

<!--                    <TextClock-->
<!--                        android:id="@+id/textClockCurrentTime"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:fontFamily="@font/helvetica"-->
<!--                        android:textColor="@color/colorPrimary" />-->

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textViewCurrentDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/helvetica"
                        android:text="Friday, 18 Sept, 2020"
                        android:textColor="@color/colorPrimary" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViewWeather"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@mipmap/ok" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textViewTemp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/helvetica"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="30sp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textViewScale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/helvetica"
                        android:text="C"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textViewWeather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/helvetica"
                        android:text="OK"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerTrivia"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_trivia"

                    />

            </LinearLayout>

        </LinearLayout>


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_milestones_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.03" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_milestones_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.97" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_milestones_top"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.75" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_milestones_bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.96" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="bottom"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@id/guideline_milestones_bottom"
            app:layout_constraintLeft_toLeftOf="@id/guideline_milestones_left"
            app:layout_constraintRight_toRightOf="@id/guideline_milestones_right"
            app:layout_constraintTop_toTopOf="@id/guideline_milestones_top">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginBottom="5dp">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helvetica_ce_cond_bold"
                    android:text="Milestones"
                    android:textColor="@color/colorPrimary" />


            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                app:cardBackgroundColor="@color/white_opac_twenty"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"

                    >

                    <ImageView
                        android:id="@+id/imageViewBronze"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:src="@mipmap/bronze_uncheck" />

                    <ImageView
                        android:id="@+id/imageViewSilver"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:src="@mipmap/silver_uncheck" />

                    <ImageView
                        android:id="@+id/imageViewGold"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:src="@mipmap/gold_uncheck" />

                    <ImageView
                        android:id="@+id/imageViewPlatinum"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:src="@mipmap/platinum_uncheck" />

                    <ImageView
                        android:id="@+id/imageViewTitanium"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/titanium_uncheck" />


                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <RelativeLayout
        android:id="@+id/progressLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="dummyClick"
        android:visibility="gone">

        <androidx.core.widget.ContentLoadingProgressBar
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true" />

    </RelativeLayout>


</RelativeLayout>